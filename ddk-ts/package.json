{
  "name": "@bennyblader/ddk-ts",
  "version": "0.3.0",
  "description": "dlcdevkit typescript bindings",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/bennyblader/ddk-ffi",
  "license": "MIT",
  "keywords": [
    "napi-rs",
    "rust",
    "rust-dlc",
    "ddk",
    "dlcdevkit"
  ],
  "files": [
    "dist/"
  ],
  "napi": {
    "binaryName": "ddk-ts",
    "packageName": "@bennyblader/ddk-ts",
    "targets": [
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu"
    ]
  },
  "engines": {
    "node": ">= 6.14.2 < 7 || >= 8.11.2 < 9 || >= 9.11.0 < 10 || >= 10.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node --import @oxc-node/core/register benchmark/bench.ts",
    "build": "napi build --platform --release --js index.js --dts index.d.ts --output-dir dist",
    "build:darwin-arm64": "napi build --platform --release --js index.js --dts index.d.ts --output-dir dist --target aarch64-apple-darwin",
    "build:linux-x64": "napi build --platform --release --js index.js --dts index.d.ts --output-dir dist --target x86_64-unknown-linux-gnu",
    "build:debug": "napi build --platform --js index.js --dts index.d.ts --output-dir dist",
    "build:all": "napi build --release --js index.js --dts index.d.ts --output-dir dist --target aarch64-apple-darwin --target x86_64-unknown-linux-gnu",
    "prepublish": "napi prepublish -t npm --npm-dir dist/npm",
    "prepublishOnly": "napi prepublish -t npm --npm-dir dist/npm",
    "format": "run-p format:prettier format:rs",
    "format:prettier": "prettier . -w",
    "format:rs": "cargo fmt",
    "test": "ava",
    "test:all": "pnpm verify && cargo test && pnpm test",
    "verify": "node scripts/verify-parity.js && node scripts/verify-types.js",
    "verify:parity": "node scripts/verify-parity.js",
    "verify:types": "node scripts/verify-types.js",
    "version": "napi version"
  },
  "devDependencies": {
    "@emnapi/core": "^1.4.5",
    "@emnapi/runtime": "^1.4.5",
    "@napi-rs/cli": "^3.0.3",
    "@tybys/wasm-util": "^0.10.0",
    "ava": "^6.4.1",
    "chalk": "^5.4.1",
    "lint-staged": "^16.1.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tinybench": "^4.0.1",
    "typescript": "^5.8.3"
  },
  "ava": {
    "timeout": "2m",
    "workerThreads": false,
    "files": [
      "__test__/**/*.spec.mjs"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.9.2",
  "optionalDependencies": {
    "@bennyblader/ddk-ts-darwin-arm64": "0.1.11",
    "@bennyblader/ddk-ts-linux-x64-gnu": "0.1.11"
  }
}
